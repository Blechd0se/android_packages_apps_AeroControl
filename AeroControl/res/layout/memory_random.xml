<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- First row; -->

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/random_read"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="@color/light_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/random_read_value"
        android:layout_toRightOf="@+id/random_read"
        android:inputType="number"
        android:gravity="right"
        android:layout_width="64dp"
        android:layout_height="wrap_content" />

    <!-- Second row; -->

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/random_write"
        android:layout_below="@+id/random_read"
        android:textColor="@color/light_grey"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/random_write_value"
        android:layout_toRightOf="@+id/random_write"
        android:layout_below="@+id/random_read_value"
        android:inputType="number"
        android:gravity="right"
        android:layout_width="64dp"
        android:layout_height="wrap_content" />

</RelativeLayout>