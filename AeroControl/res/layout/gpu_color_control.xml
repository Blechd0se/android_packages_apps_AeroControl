<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- First row; -->

    <com.aero.control.helpers.Android.Material.Slider
        android:id="@+id/redValues"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#F44336"
        android:layout_toLeftOf="@+id/redValue"
        materialdesign:max="255"
        materialdesign:min="20"
        materialdesign:showNumberIndicator="true" />

    <EditText
        android:id="@+id/redValue"
        android:inputType="number"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"/>

    <!-- Second row; -->

    <com.aero.control.helpers.Android.Material.Slider
        android:id="@+id/greenValues"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#4CAF50"
        android:layout_toLeftOf="@+id/greenValue"
        android:layout_below="@id/redValues"
        materialdesign:max="255"
        materialdesign:min="20"
        materialdesign:showNumberIndicator="true" />

    <EditText
        android:id="@+id/greenValue"
        android:inputType="number"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/redValue"/>

    <!-- Third row; -->

    <com.aero.control.helpers.Android.Material.Slider
        android:id="@+id/blueValues"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#2196F3"
        android:layout_toLeftOf="@+id/blueValue"
        android:layout_below="@id/greenValues"
        materialdesign:max="255"
        materialdesign:min="20"
        materialdesign:showNumberIndicator="true" />

    <EditText
        android:id="@+id/blueValue"
        android:inputType="number"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/greenValue"/>

</RelativeLayout>